<StructureDefinition xmlns="http://hl7.org/fhir">
   <id value="ch-emed-medication"/>
   <url value="http://fhir.ch/ig/ch-emed/StructureDefinition/ch-emed-medication"/>
   <name value="CHEMEDMedication"/>
   <title value="CH EMED Medication Profile"/>
   <status value="active"/>
   <experimental value="false"/>
   <publisher value="HL7 on behalf of eHealth Suisse"/>
   <description value="Profile on Medication for the Medication Prescription Document"/>
   <kind value="resource"/>
   <abstract value="false"/>
   <type value="Medication"/>
   <baseDefinition value="http://hl7.org/fhir/StructureDefinition/Medication"/>
   <derivation value="constraint"/>
   <differential>
      <element id="Medication">
         <path value="Medication"/>
      </element>

      <element id="Medication.code">
         <path value="Medication.code"/>
         <short value="GTIN Codes that identify this medication"/>
         <min value="0"/>
         <max value="1"/>
         <patternCodeableConcept>
            <coding>
               <system value="urn:oid:2.51.1.1"/>
            </coding>
         </patternCodeableConcept>
      </element>

      <element id="Medication.form">
         <path value="Medication.form"/>
         <min value="1"/>
         <max value="1"/>
         <patternCodeableConcept>
            <coding>
               <system value="urn:oid:0.4.0.127.0.16.1.1.2.1"/>
            </coding>
         </patternCodeableConcept>
      </element>

      <element id="Medication.amount">
         <path value="Medication.amount"/>
         <min value="0"/>
         <max value="1"/>
      </element>

   </differential>
</StructureDefinition>